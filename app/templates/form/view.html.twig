{% extends 'base.html.twig' %}

{% block title %}Filled Form View{% endblock %}

{% block body %}

    {{ dump(form) }}
    {{ dump(form.answers) }}

    {{ dump(form.template.title) }}

    <div class="container my-5">

        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="mb-0">Form: {{ form.template.title }}</h2>
                <small class="text-muted">Filled by <strong>{{ form.user.name }}</strong>. Email: <strong>{{ form.user.email }}</strong> on {{ form.submittedAt|date('Y-m-d H:i:s') }}</small>
            </div>
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                    Actions
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="/form/42/edit">Edit</a></li>
                    <li><a class="dropdown-item text-danger" href="#">Delete</a></li>
                </ul>
            </div>
        </div>

        <!-- Answers -->
        <div class="card mb-3">
            <div class="card-header bg-light">
                <strong>1. Position</strong>
                <div class="text-muted small">What position do you apply for?</div>
            </div>
            <div class="card-body">
                Frontend Developer
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-light">
                <strong>2. Experience</strong>
                <div class="text-muted small">Work on the commercial projects or freelance (in years)</div>
            </div>
            <div class="card-body">
                3
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-light">
                <strong>3. Contact</strong>
                <div class="text-muted small">Phone number or Skype</div>
            </div>
            <div class="card-body">
                alice_skype
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-light">
                <strong>4. Additional Information</strong>
                <div class="text-muted small">Write anything in the field below</div>
            </div>
            <div class="card-body">
                I am open to relocation and flexible on working hours.
            </div>
        </div>

        <!-- Fixed Fields -->
        <div class="card mb-3">
            <div class="card-header bg-light">
                <strong>User</strong>
            </div>
            <div class="card-body">
                Alice (alice@example.com)
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-light">
                <strong>Date</strong>
            </div>
            <div class="card-body">
                2025-06-18 10:32 AM
            </div>
        </div>

        <div class="mt-4">
            <a href="/template/7" class="btn btn-outline-primary btn-sm">Back to Template</a>
        </div>
    </div>
{% endblock %}
