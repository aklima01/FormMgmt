{% extends 'base.html.twig' %}

{% block title %}Filled Form View{% endblock %}

{% block body %}

    <div class="container   my-5">

        <div class="row mt-4">
            <div class="col-md-8 offset-md-2">
                
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="mb-0">Form: {{ form.template.title }}</h2>
                <small class="text-muted">Filled by <strong>{{ form.user.name }}</strong>. Email: <strong>{{ form.user.email }}</strong> on {{ form.submittedAt|date('Y-m-d h:i A') }}</small>
            </div>
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                    Actions
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="/form/42/edit">Edit</a></li>
                    <li><a class="dropdown-item text-danger" href="#">Delete</a></li>
                </ul>
            </div>
        </div>

        <!-- Answers -->

        {% for question in questions %}
            <div class="card mb-3">
                <div class="card-header bg-light">
                    <strong>{{ loop.index }}. {{ question.title }}</strong>
                    <div class="text-muted small">{{ question.description }}</div>
                </div>
                <div class="card-body">
                    {% for answer in answers %}
                        {% if answer.question.id == question.id %}
                            {% if answer.stringValue is not null %}
                                <p>{{ answer.stringValue }}</p>
                            {% elseif answer.intValue is not null %}
                                <p>{{ answer.intValue }}</p>
                            {% elseif answer.boolValue is not null %}
                                <p>{{ answer.boolValue ? 'Yes' : 'No' }}</p>
                            {% else %}
                                <p><em>No answer provided</em></p>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% endfor %}




        <!-- Fixed Fields -->
        <div class="card mb-3">
            <div class="card-header bg-light">
                <strong>User</strong>
            </div>
            <div class="card-body">
                {{ form.user.name }} ( {{ form.user.email }} )
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-light">
                <strong>Date</strong>
            </div>
            <div class="card-body">
                {{ form.submittedAt|date('Y-m-d h:i A') }}
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('template_list') }}" class="btn btn-outline-primary btn-sm">Back to Template</a>
        </div>
    </div>
    </div>
    </div>
{% endblock %}
