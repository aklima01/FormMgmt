{% extends 'base.html.twig' %}

{% block title %}Fill up template form{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mt-4">
            <div class="col-md-8 offset-md-2">

                <!-- Template Info -->
                <h2 class="mb-1">{{ template.title }}</h2>
                <p class="text-muted">
                    Topic:
                    {% if template.topic is not null and template.topic.name is defined %}
                        <strong>{{ template.topic.name }}</strong>
                    {% else %}
                        <em>No topic available</em>
                    {% endif %}
                </p>

                {# Tags section #}
                {% if template.tags is not empty %}
                    <div class="mb-2">
                        {% for tag in template.tags %}
                            <span class="badge bg-secondary tag">{{ tag.name }}</span>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted"><em>No tags available</em></p>
                {% endif %}

                <button
                    id="like-button"
                    class="btn btn-outline-danger {{ app.user and template.isLikedBy(app.user) ? 'active' : '' }}"
                    data-id="{{ template.id }}"
                    {% if not app.user %} disabled title="Log in to like"{% endif %}>
                    ❤️ Likes <span id="like-count">{{ template.getLikesCount() }}</span>
                </button>

                <br>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title text-primary">
                            <i class="bi bi-info-circle-fill me-2"></i>Description
                        </h5>
                        <div class="card-text">
                            {{ template.description|markdown_to_html|raw }}
                        </div>
                    </div>
                </div>

                {% if template.imageUrl is not null and template.imageUrl != '' %}
                    <div class="mb-4 rounded overflow-hidden position-relative" style="height: 200px; background-color: #f8f9fa;">
                        <img src="{{ template.imageUrl }}"
                             alt="Template Banner"
                             class="w-100 h-100 object-fit-cover">
                    </div>
                {% endif %}

                {% set canEdit = is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h4 class="card-title mb-4">
                            <i class="bi bi-ui-checks-grid me-2"></i>Fill Out the Form
                        </h4>

                        {% if canEdit %}
                        <form action="{{ path('template_fill', {id: template.id}) }}" method="post">
                            <input type="hidden" name="template_id" value="{{ template.id }}">
                            {% endif %}

                            {% if template_questions is not empty %}
                                {% for question in template_questions %}
                                    <div class="mb-4">
                                        <label class="form-label">
                                            <strong>{{ loop.index }}. {{ question.title }}</strong>
                                        </label>
                                        {% if question.description %}
                                            <small class="d-block text-muted mb-2">{{ question.description }}</small>
                                        {% endif %}

                                        {% set inputName = 'question_' ~ question.id %}

                                        {% if canEdit %}
                                            {% if question.type == 'Single_line_text' %}
                                                <input type="text" class="form-control" name="{{ inputName }}" placeholder="Your answer">
                                            {% elseif question.type == 'Number' %}
                                                <input type="number" min="0" class="form-control" name="{{ inputName }}" placeholder="Enter a number">
                                            {% elseif question.type == 'Text' %}
                                                <textarea class="form-control" rows="4" name="{{ inputName }}" placeholder="Your detailed response..."></textarea>
                                            {% elseif question.type == 'Checkbox' %}
                                                <div class="form-check mt-1">
                                                    <input type="hidden" name="{{ inputName }}" value="0">
                                                    <input class="form-check-input" type="checkbox" name="{{ inputName }}" id="{{ inputName }}">
                                                    <label class="form-check-label" for="{{ inputName }}">Check if applicable</label>
                                                </div>
                                            {% else %}
                                                <input type="text" class="form-control" name="{{ inputName }}">
                                            {% endif %}
                                        {% else %}
                                            <div class="form-control-plaintext text-muted fst-italic">
                                                (Login to answer this question)
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            {% endif %}

                            {% if canEdit %}
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-send-fill me-1"></i> Submit Form
                                </button>
                                <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    {% else %}
                        <div class="alert alert-info d-flex align-items-center mt-4" role="alert">
                            <i class="bi bi-lock-fill me-2"></i>
                            Please <a href="{{ path('app_login') }}" class="ms-1 text-decoration-underline">log in</a> to submit the form.
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Comments Section -->
                <section class="mt-5">
                    <div class="card border-0 shadow-sm rounded-3">
                        <div class="card-body">
                            <h4 class="card-title mb-4">
                                <i class="bi bi-chat-left-dots-fill me-2 text-primary"></i>Comments
                            </h4>

                            <!-- Comment List -->
                            <div id="comment-list" class="mb-4">
                                {# Comments will be loaded via AJAX or rendered here #}
                            </div>

                            {% if app.user %}
                                <!-- Comment Form -->
                                <div class="border-top pt-3">
                                    <h6 class="mb-3">
                                        <i class="bi bi-pencil-fill me-1 text-primary"></i>Leave a Comment
                                    </h6>

                                    <div class="input-group">
                                        <textarea id="comment-input" class="form-control" rows="2" placeholder="Write your comment here..." required></textarea>
                                        <button id="comment-submit" class="btn btn-primary">
                                            <i class="bi bi-send-fill me-1"></i> Post
                                        </button>
                                    </div>

                                </div>
                            {% else %}
                                <!-- Login Alert -->
                                <div class="alert alert-info d-flex align-items-center mt-4" role="alert">
                                    <i class="bi bi-lock-fill me-2"></i>
                                    <div>
                                        Please <a href="{{ path('app_login') }}" class="text-decoration-underline ms-1">log in</a> to leave a comment.
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('#like-button').on('click', function() {
            let btn = $(this);
            let templateId = btn.data('id');

            $.ajax({
                url: '/like/' + templateId,
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-TOKEN': '{{ csrf_token("authenticate") }}'
                },
                success: function(data) {
                    $('#like-count').text(data.count);
                    btn.toggleClass('active');
                },
                error: function(xhr) {
                    alert(xhr.responseJSON?.error || 'Error');
                }
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/dayjs@1/dayjs.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/dayjs@1/plugin/customParseFormat.js"></script>
    <script>
        dayjs.extend(window.dayjs_plugin_customParseFormat);
    </script>

    <script>
        $(document).ready(function () {
            const templateId = {{ template.id }};

            function loadComments() {
                $.get(`/template/${templateId}/comments`, function (data) {
                    const list = $('#comment-list').empty();
                    data.forEach(c => {
                        const formatted = dayjs(c.createdAt).format('D MMMM YYYY, h:mm A');
                        list.append(`
                <div class="border-bottom py-2">
                    <strong>${c.author}</strong>: ${c.content}<br>
                    <small>${formatted}</small>
                </div>
            `);
                    });
                });
            }



            $('#comment-submit').click(function () {
                const content = $('#comment-input').val().trim();
                if (!content) return;

                $.ajax({
                    url: `/template/${templateId}/comment`,
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({content}),
                    success: function () {
                        $('#comment-input').val('');
                        loadComments();
                    },
                    error: function () {
                        $('#comment-input').val('');
                        loadComments();
                    }
                });
            });

            setInterval(loadComments, 5000);
            loadComments();
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.number-only').forEach(function(input) {
                // Prevent typing negative signs
                input.addEventListener('keydown', function(e) {
                    if (e.key === '-' || e.key === 'e') {
                        e.preventDefault();
                    }
                });

                // Prevent pasting negative numbers
                input.addEventListener('paste', function(e) {
                    const paste = (e.clipboardData || window.clipboardData).getData('text');
                    if (paste.includes('-') || paste.includes('e')) {
                        e.preventDefault();
                    }
                });

                // Forcefully fix value if entered with devtools or other trick
                input.addEventListener('input', function () {
                    if (parseFloat(input.value) < 0) {
                        input.value = '';
                    }
                });
            });
        });
    </script>

{% endblock %}
