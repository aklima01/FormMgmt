{% block javascripts %}
    {{ parent() }}
    <script>
        $('#like-button').on('click', function() {
            let btn = $(this);
            let templateId = btn.data('id');

            $.ajax({
                url: '/like/' + templateId,
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-TOKEN': '{{ csrf_token("authenticate") }}' // Optional
                },
                success: function(data) {
                    $('#like-count').text(data.count);
                    btn.toggleClass('active');
                },
                error: function(xhr) {
                    alert(xhr.responseJSON?.error || 'Error');
                }
            });
        });
    </script>
