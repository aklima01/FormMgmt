{% extends 'base.html.twig' %}

{% block title %}Template List{% endblock %}

{% block body %}

{#   {% if( templates is not empty ) %}#}
{#        {{ dump( templates[0] ) }}#}
{#    {% else %}#}
{#        {{ dump( 'No templates found' ) }}#}
{#    {% endif %}#}

    <div class="container-fluid mt-4">
        <div class="row">
            {% include 'user/_sidebaruser.html.twig' %}
            <div class="col-lg-10">

                <div class="mb-3 d-flex justify-content-end">
                    <a href="{{ path('template_create') }}" class="btn btn-success">
                        <i class="bi bi-plus-lg"></i> Create Template
                    </a>
                </div>

                <h1 class="mb-4">Templates</h1>

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}


                    <div class="table-responsive">
                        <table id="templateTable" class="table table-bordered table-striped align-middle">
                            <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Image</th>
                                <th>Description</th>
                                <th>Author</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody></tbody>
                        </table>


                    </div>
                
            </div>
        </div>
    </div>

    {# DataTables CSS & JS #}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            $('#templateTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: "{{ path('template_ajax') }}",
                columns: [
                    { data: 'id' },
                    { data: 'title' },
                    { data: 'image', orderable: false, searchable: false },
                    { data: 'description' },
                    { data: 'author' },
                    { data: 'actions', orderable: false, searchable: false }
                ]
            });
        });
    </script>

{% endblock %}
