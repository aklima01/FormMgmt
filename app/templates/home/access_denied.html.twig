{% extends 'base.html.twig' %}

{% block title %}Access Denied{% endblock %}

{% block body %}
    <meta http-equiv="refresh" content="10;url={{ path('app_logout') }}">

    <div class="container text-center mt-5">
        <div class="card mx-auto shadow p-4" style="max-width: 500px;">
            <div class="card-body">
                <h1 class="text-danger mb-3">Access Denied</h1>
                <p class="text-muted">You do not have permission to access this page.</p>
                <p class="mt-3">
                    Redirecting to <a href="{{ path('app_logout') }}">Login</a> in
                    <span id="countdown" class="fw-bold">10</span> seconds.
                </p>
                <a href="{{ path('app_logout') }}" class="btn btn-primary mt-3">Go to Login Now</a>
            </div>
        </div>
    </div>

    <script>
        // Countdown script
        let seconds = 10;
        const countdownEl = document.getElementById('countdown');

        const interval = setInterval(() => {
            seconds--;
            countdownEl.textContent = seconds;
            if (seconds <= 0) {
                clearInterval(interval);
            }
        }, 1000);
    </script>
{% endblock %}

