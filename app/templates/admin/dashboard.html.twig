{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mt-4">

            {% include 'admin/_sidebar.html.twig' %}


            <!-- Main Content -->
            <div class="col-lg-10">
                <h1>User Management</h1>

                <form method="post" action="{{ path('admin_users_bulk_action') }}" id="bulk-action-form">
                    <input type="hidden" name="action" id="bulk_action_type">
                    <input type="hidden" name="user_ids" id="user_ids_input">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="btn-group" role="group" aria-label="User actions">
                            <button type="submit" value="block" class="btn btn-outline-primary btn-sm d-flex align-items-center gap-1 bulk-action-btn">
                                <i class="bi bi-slash-circle"></i> Block
                            </button>
                            <button type="submit" value="unblock" class="btn btn-outline-success btn-sm d-flex align-items-center gap-1 bulk-action-btn">
                                <i class="bi bi-check-circle"></i> Unblock
                            </button>
                            <button type="submit" value="make_admin" class="btn btn-outline-primary btn-sm d-flex align-items-center gap-1 bulk-action-btn">
                                <i class="bi bi-person-plus"></i> Make Admin
                            </button>
                            <button type="submit" value="remove_admin" class="btn btn-outline-secondary btn-sm d-flex align-items-center gap-1 bulk-action-btn">
                                <i class="bi bi-person-dash"></i> Remove Admin
                            </button>
                            <button type="button" value="delete" class="btn btn-outline-danger btn-sm d-flex align-items-center gap-1 bulk-action-btn" id="trigger-delete-modal">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </div>

                    <table id="users-table" class="table table-bordered table-hover" style="width:100%">
                        <thead class="table-light">
                        <tr>
                            <th><input type="checkbox" id="select-all"></th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Roles</th>
                            <th>Created At</th>
                        </tr>
                        </thead>
                    </table>
                </form>

                <!-- Delete Confirmation Modal -->
                <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Deletion</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete the selected users?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-danger btn-sm" id="confirm-delete-btn">Yes, Delete</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Toast Notification -->
                <div class="toast align-items-center text-bg-warning border-0 position-fixed bottom-0 end-0 m-3" role="alert" aria-live="assertive" aria-atomic="true" id="noUsersToast" style="z-index: 1056;">
                    <div class="d-flex">
                        <div class="toast-body">
                            Please select at least one user before performing this action.
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function () {
            const table = $('#users-table').DataTable({
                serverSide: true,
                processing: true,
                ajax: "{{ path('admin_users_ajax') }}",
                columns: [
                    {
                        data: 'id',
                        orderable: false,
                        searchable: false,
                        render: function (data) {
                            return '<input type="checkbox" class="user-checkbox" value="' + data + '">';
                        }
                    },
                    { data: 'name' },
                    { data: 'email' },
                    {
                        data: 'status',
                        render: function (data) {
                            if (data === 'active') {
                                return '<span class="badge bg-success">Active</span>';
                            } else if (data === 'blocked') {
                                return '<span class="badge bg-danger">Blocked</span>';
                            } else {
                                return '<span class="badge bg-secondary">' + data + '</span>';
                            }
                        }
                    },
                    { data: 'roles', orderable: false },
                    { data: 'createdAt' }
                ],
                order: [[1, 'asc']],
                lengthMenu: [10, 25, 50, 100],
                pageLength: 10,
                drawCallback: function () {
                    $('#select-all').prop('checked', false).prop('indeterminate', false);
                }
            });

            let selectedUsers = new Set();

            $('#users-table tbody').on('change', '.user-checkbox', function () {
                const id = $(this).val();
                this.checked ? selectedUsers.add(id) : selectedUsers.delete(id);
                updateSelectedInput();
                updateSelectAllCheckbox();
            });

            $('#select-all').on('change', function () {
                const isChecked = this.checked;
                $('.user-checkbox').each(function () {
                    $(this).prop('checked', isChecked);
                    const id = $(this).val();
                    isChecked ? selectedUsers.add(id) : selectedUsers.delete(id);
                });
                updateSelectedInput();
                updateSelectAllCheckbox();
            });

            function updateSelectedInput() {
                $('#user_ids_input').val(Array.from(selectedUsers).join(','));
            }

            function updateSelectAllCheckbox() {
                const total = $('.user-checkbox').length;
                const checked = $('.user-checkbox:checked').length;
                $('#select-all')
                    .prop('checked', total > 0 && total === checked)
                    .prop('indeterminate', checked > 0 && checked < total);
            }

            $('.bulk-action-btn').not('#trigger-delete-modal').on('click', function () {
                $('#bulk_action_type').val($(this).val());
            });

            $('#trigger-delete-modal').on('click', function () {
                if (selectedUsers.size === 0) {
                    const toastEl = document.getElementById('noUsersToast');
                    const toast = new bootstrap.Toast(toastEl);
                    toast.show();
                    return;
                }

                $('#bulk_action_type').val('delete');
                const modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
                modal.show();
            });

            $('#confirm-delete-btn').on('click', function () {
                $('#bulk-action-form').submit();
            });

            $('#bulk-action-form').on('submit', function (e) {
                if (selectedUsers.size === 0) {
                    e.preventDefault();
                }
            });
        });
    </script>
{% endblock %}
