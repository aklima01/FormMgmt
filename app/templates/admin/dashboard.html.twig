{# templates/admin/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <h1>Admin Dashboard</h1>

        <!-- Tabs Navigation -->
        <ul class="nav nav-tabs" id="adminTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="users-tab" data-bs-toggle="tab" data-bs-target="#users" type="button" role="tab" aria-controls="users" aria-selected="true">
                    User Management
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="templates-tab" data-bs-toggle="tab" data-bs-target="#templates" type="button" role="tab" aria-controls="templates" aria-selected="false">
                    All Templates
                </button>
            </li>
        </ul>

        <!-- Tabs Content -->
        <div class="tab-content mt-3" id="adminTabsContent">
            <!-- User Management Tab -->
            <div class="tab-pane fade show active" id="users" role="tabpanel" aria-labelledby="users-tab">
                <form method="post" action="{{ path('admin_users_bulk_action') }}" id="bulk-action-form">
                    <input type="hidden" name="action" id="bulk_action_type">
                    <input type="hidden" name="user_ids" id="user_ids_input">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="btn-group" role="group" aria-label="User actions">
                            <button type="submit" value="block" class="btn btn-outline-primary btn-sm d-flex align-items-center gap-1 bulk-action-btn">
                                <i class="bi bi-slash-circle"></i> Block
                            </button>
                            <button type="submit" value="unblock" class="btn btn-outline-success btn-sm d-flex align-items-center gap-1 bulk-action-btn">
                                <i class="bi bi-check-circle"></i> Unblock
                            </button>
                            <button type="submit" value="make_admin" class="btn btn-outline-primary btn-sm d-flex align-items-center gap-1 bulk-action-btn">
                                <i class="bi bi-person-plus"></i> Make Admin
                            </button>
                            <button type="submit" value="remove_admin" class="btn btn-outline-secondary btn-sm d-flex align-items-center gap-1 bulk-action-btn">
                                <i class="bi bi-person-dash"></i> Remove Admin
                            </button>
                            <button type="button" value="delete" class="btn btn-outline-danger btn-sm d-flex align-items-center gap-1 bulk-action-btn" id="trigger-delete-modal">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </div>

                    <table id="users-table" class="table table-hover" style="width:100%">
                        <thead class="table-light">
                        <tr>
                            <th><input type="checkbox" id="select-all"></th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Roles</th>
                            <th>Created At</th>
                        </tr>
                        </thead>
                    </table>
                </form>
            </div>

            <!-- My Templates Tab -->
            <div class="tab-pane fade" id="templates" role="tabpanel" aria-labelledby="templates-tab">
                <div class="mb-2">
                    <button id="bulkDeleteBtn" class="btn btn-danger btn-sm" disabled>
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
                <div class="table-responsive">
                    <table id="templateTable" class="table table-hover align-middle">
                        <thead class="table-light">
                        <tr>
                            <th><input type="checkbox" id="selectAll"></th>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Image</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Deletion</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">Are you sure you want to delete the selected users?</div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger btn-sm" id="confirm-delete-btn">Yes, Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {# Load marked.js FIRST #}
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

    <script>
        $(document).ready(function () {
            const table = $('#users-table').DataTable({
                serverSide: true,
                processing: true,
                ajax: "{{ path('admin_users_ajax') }}",
                columns: [
                    {
                        data: 'id',
                        orderable: false,
                        searchable: false,
                        render: function (data) {
                            return '<input type="checkbox" class="user-checkbox" value="' + data + '">';
                        }
                    },
                    { data: 'name' },
                    { data: 'email' },
                    {
                        data: 'status',
                        render: function (data) {
                            if (data === 'active') {
                                return '<span class="badge bg-success">Active</span>';
                            } else if (data === 'blocked') {
                                return '<span class="badge bg-danger">Blocked</span>';
                            } else {
                                return '<span class="badge bg-secondary">' + data + '</span>';
                            }
                        }
                    },
                    { data: 'roles', orderable: false },
                    { data: 'createdAt' }
                ],
                order: [[1, 'asc']],
                lengthMenu: [10, 25, 50, 100],
                pageLength: 10,
                drawCallback: function () {
                    $('#select-all').prop('checked', false).prop('indeterminate', false);
                }
            });

            let selectedUsers = new Set();

            $('#users-table tbody').on('change', '.user-checkbox', function () {
                const id = $(this).val();
                this.checked ? selectedUsers.add(id) : selectedUsers.delete(id);
                updateSelectedInput();
                updateSelectAllCheckbox();
            });

            $('#select-all').on('change', function () {
                const isChecked = this.checked;
                $('.user-checkbox').each(function () {
                    $(this).prop('checked', isChecked);
                    const id = $(this).val();
                    isChecked ? selectedUsers.add(id) : selectedUsers.delete(id);
                });
                updateSelectedInput();
                updateSelectAllCheckbox();
            });

            function updateSelectedInput() {
                $('#user_ids_input').val(Array.from(selectedUsers).join(','));
            }

            function updateSelectAllCheckbox() {
                const total = $('.user-checkbox').length;
                const checked = $('.user-checkbox:checked').length;
                $('#select-all')
                    .prop('checked', total > 0 && total === checked)
                    .prop('indeterminate', checked > 0 && checked < total);
            }

            $('.bulk-action-btn').not('#trigger-delete-modal').on('click', function () {
                $('#bulk_action_type').val($(this).val());
            });

            $('#trigger-delete-modal').on('click', function () {
                if (selectedUsers.size === 0) {
                    // const toastEl = document.getElementById('noUsersToast');
                    const toast = new bootstrap.Toast(toastEl);
                    toast.show();
                    return;
                }

                $('#bulk_action_type').val('delete');
                const modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
                modal.show();
            });

            $('#confirm-delete-btn').on('click', function () {
                $('#bulk-action-form').submit();
            });

            $('#bulk-action-form').on('submit', function (e) {
                if (selectedUsers.size === 0) {
                    e.preventDefault();
                }
            });
        });
    </script>


    {# template table script#}
    <script>
        $(document).ready(function () {
            const templateTable = $('#templateTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: "{{ path('template_ajax') }}",
                order: [[0, 'desc']],
                columns: [
                    {
                        data: 'id',
                        orderable: false,
                        searchable: false,
                        render: data => `<input type="checkbox" class="row-checkbox" value="${data}">`
                    },
                    { data: 'id' },
                    { data: 'title' },
                    { data: 'image', orderable: false, searchable: false },
                    {
                        data: 'description',
                        render: (data, type) => type === 'display' ? marked.parse(data || '') : data
                    },
                    {
                        data: 'actions',
                        orderable: false,
                        visible: false,
                        searchable: false,

                        render: data => `
                            <div class="dropdown">
                                <button class="btn btn-sm btn-light" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="${data.editUrl}">Edit</a></li>
                                    <li><a class="dropdown-item" href="${data.fillUrl}">Fill</a></li>
                                    <li><a class="dropdown-item text-danger" href="${data.deleteUrl}">Delete</a></li>
                                </ul>
                            </div>`
                    }
                ],
                createdRow: (row, data) => {
                    $(row).attr('data-href', data.actions.editUrl);
                    $(row).css('cursor', 'pointer');
                }
            });

            $('#selectAll').on('click', function () {
                const checked = this.checked;
                $('.row-checkbox').prop('checked', checked);
                $('#bulkDeleteBtn').prop('disabled', $('.row-checkbox:checked').length === 0);
            });

            $(document).on('change', '.row-checkbox', function () {
                const allChecked = $('.row-checkbox').length === $('.row-checkbox:checked').length;
                $('#selectAll').prop('checked', allChecked);
                $('#bulkDeleteBtn').prop('disabled', $('.row-checkbox:checked').length === 0);
            });

            $('#bulkDeleteBtn').on('click', function () {
                const ids = $('.row-checkbox:checked').map(function () {
                    return $(this).val();
                }).get();

                if (ids.length === 0) return;

                $.ajax({
                    url: "{{ path('template_bulk_delete') }}",
                    type: 'POST',
                    data: JSON.stringify({ ids: ids }),
                    contentType: 'application/json',
                    success: function () {
                        templateTable.ajax.reload(null, false);
                        $('#selectAll').prop('checked', false);
                        $('#bulkDeleteBtn').prop('disabled', true);
                    },
                    error: function () {
                        alert('Error deleting templates.');
                    }
                });
            });

            $(document).on('click', '#templateTable tbody tr', function (e) {
                if (
                    $(e.target).is('a, button, i, input[type="checkbox"], .row-checkbox') ||
                    $(e.target).closest('.dropdown').length
                ) return;

                const href = $(this).attr('data-href');
                if (href) {
                    window.location.href = href;
                }
            });
        });
    </script>




{% endblock %}
