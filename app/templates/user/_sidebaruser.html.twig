<!-- Mobile sidebar toggle button - visible only on small screens -->
<div class="d-lg-none mb-3">
    <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar" aria-controls="mobileSidebar">
        <i class="bi bi-list"></i> Menu
    </button>
</div>

<!-- Offcanvas sidebar for mobile -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="mobileSidebar" aria-labelledby="mobileSidebarLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="mobileSidebarLabel">User Dashboard</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="list-group">
            <a href="/dashboard" class="list-group-item list-group-item-action active">
                <i class="bi bi-house-door"></i> Home
            </a>
            <a href="/profile" class="list-group-item list-group-item-action">
                <i class="bi bi-person"></i> Profile
            </a>
            <a href="/messages" class="list-group-item list-group-item-action">
                <i class="bi bi-chat-left-text"></i> Messages
            </a>
            <a href="/settings" class="list-group-item list-group-item-action">
                <i class="bi bi-gear"></i> Settings
            </a>
            <a href="/logout" class="list-group-item list-group-item-action">
                <i class="bi bi-box-arrow-right"></i> Logout
            </a>
        </div>
    </div>
</div>

<!-- Desktop sidebar - visible only on large screens -->
<div class="col-lg-2 d-none d-lg-block">
    <div class="list-group">

        <a href="{{ path('template_list') }}"
           class="list-group-item list-group-item-action{% if app.request.get('_route') == 'template_list' %} active{% endif %}">
            <i class="bi bi-person"></i>Templates
        </a>

        <a href="/messages" class="list-group-item list-group-item-action">
            <i class="bi bi-chat-left-text"></i> Filled Forms
        </a>
        <a href="/settings" class="list-group-item list-group-item-action">
            <i class="bi bi-gear"></i> Settings
        </a>
        <a href="/logout" class="list-group-item list-group-item-action">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    </div>
</div>
