<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Homepage{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block stylesheets %}
        <!-- Bootstrap CSS & Icons -->
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bootstrap/bootstrap-icons/bootstrap-icons.css') }}">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    {% endblock %}

</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg fixed-top bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand text-white" href="{{ path('app_home') }}">
            <i class="bi bi-house-door"></i> Home
        </a>

        <!-- Mobile Toggler -->
        <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Collapsible Navbar -->
        <div class="collapse navbar-collapse" id="navbarMain">

            <!-- Left Menu -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 flex-row flex-wrap align-items-center">
                <li class="nav-item px-2 border-start border-white d-none d-lg-block"></li>
                <li class="nav-item px-2">
                    <a class="nav-link text-white" href="#"><i class="bi bi-globe2"></i> Templates</a>
                </li>
            </ul>

            <!-- Right Menu -->
            <div class="d-flex align-items-center ms-auto">

                {% if app.user %}

                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-link text-white me-3" href="{{ path('admin_users_list') }}">
                            <i class="bi bi-speedometer2 me-1"></i>Dashboard
                        </a>
                    {% elseif is_granted('ROLE_USER') %}
                        <a class="nav-link text-white me-3" href="{{ path('user_dashboard') }}">
                            <i class="bi bi-person-circle me-1"></i>Profile
                        </a>
                    {% endif %}

                    <form method="post" action="{{ path('app_logout') }}" class="m-0">
                        <button class="btn btn-link nav-link text-white p-0" type="submit">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>

                {% else %}
                    <!-- Login & Register Links -->
                    <ul class="navbar-nav flex-row flex-wrap align-items-center m-0 p-0">
                        <li class="nav-item px-2 border-start border-white d-none d-lg-block"></li>
                        <li class="nav-item px-2">
                            <a class="nav-link text-white" href="{{ path('app_login') }}">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </li>
                        <li class="nav-item px-2 border-start border-white d-none d-lg-block"></li>
                        <li class="nav-item px-2">
                            <a class="nav-link text-white" href="{{ path('app_register') }}">
                                <i class="bi bi-person-plus"></i> Register
                            </a>
                        </li>
                    </ul>
                {% endif %}

                <!-- Search + Language + Theme -->
                <form class="d-flex ms-3 me-lg-3 my-2 my-lg-0" role="search">
                    <input class="form-control me-2" type="search" placeholder="search any keywords" aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </form>

                <div class="d-flex align-items-center text-white">
                    <span class="me-2">En</span>
                    <div class="border-start border-white mx-2 d-none d-lg-block" style="height: 1.5rem;"></div>
                    <i class="bi bi-moon" style="cursor: pointer;"></i>
                </div>
            </div>
        </div>
    </div>
</nav>

<br>

<!-- Main Content -->

{#<div class="container pt-5 mt-5" style="border: 1px solid black;">#}
<div class="container pt-5 mt-1">
    {% block body %}{% endblock %}
</div>

<!-- Footer -->
<footer class="text-muted mt-5 text-center small">
    <p>© {{ "now"|date("Y") }} – FormMgmt</p>
</footer>


{% block javascripts %}
    <script src="{{ asset('bootstrap/js/bootstrap.bundle.min.js') }}"> </script>
{% endblock %}


</body>
</html>
