<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Homepage{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bootstrap/bootstrap-icons/bootstrap-icons.css') }}">
        <link rel="stylesheet" href="{{ asset('DataTables/datatables.min.css') }}">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/dataTables.dark.min.css">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    {% endblock %}

    <script src="{{ asset('jquery/jquery-3.7.1.min.js') }}"></script>
    <script src="{{ asset('bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('DataTables/datatables.min.js') }}"></script>

</head>
<body class="bg-light text-dark">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-primary fixed-top" id="main-navbar">
    <div class="container-fluid">
        <a class="navbar-brand text-white" href="{{ path('app_home') }}">
            <i class="bi-journal-text"></i> FormMgmt
        </a>
        <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMain">
            <div class="d-flex align-items-center ms-auto">
                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-link text-white me-3" href="{{ path('admin_users_list') }}">
                            <i class="bi bi-person-circle me-1"></i>Dashboard
                        </a>
                    {% elseif is_granted('ROLE_USER') %}
                        <a class="nav-link text-white me-3" href="{{ path('template_list') }}">
                            <i class="bi bi-person-circle me-1"></i>Profile
                        </a>
                    {% endif %}
                    <form method="post" action="{{ path('app_logout') }}" class="m-0">
                        <button class="btn btn-link nav-link text-white p-0" type="submit">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                {% else %}
                    <ul class="navbar-nav flex-row flex-wrap align-items-center m-0 p-0">
                        <li class="nav-item px-2 border-start border-white d-none d-lg-block"></li>
                        <li class="nav-item px-2">
                            <a class="nav-link text-white" href="{{ path('app_login') }}">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </li>
                        <li class="nav-item px-2 border-start border-white d-none d-lg-block"></li>
                        <li class="nav-item px-2">
                            <a class="nav-link text-white" href="{{ path('app_register') }}">
                                <i class="bi bi-person-plus"></i> Register
                            </a>
                        </li>
                    </ul>
                {% endif %}

                <form class="d-flex ms-3 me-lg-3 my-2 my-lg-0" role="search" action="{{ path('template_search') }}" method="get">
                    <input class="form-control me-2" type="search" name="q" placeholder="Search any keywords" aria-label="Search" value="{{ query|default('') }}">
                    <button class="btn btn-outline-light" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </form>


                <!-- Language and Theme Toggle -->
                <div class="d-flex align-items-center ms-2 gap-2">
                    <button class="btn btn-outline-light px-3 py-1 fw-semibold" id="lang-toggle" title="Toggle language">
                        <i class="bi bi-translate me-1"></i> <span id="lang-label">EN</span>
                    </button>

                    <button class="btn btn-outline-light" id="theme-toggle" title="Toggle dark mode">
                        <i class="bi bi-moon" id="theme-icon"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</nav>

<br>

<div class="container pt-5 mt-1">
    {% block body %}{% endblock %}
</div>

<div aria-live="polite" aria-atomic="true" class="position-relative">
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="toast align-items-center text-bg-{{ label }} border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            {{ message }}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>

<footer class="text-muted mt-5 text-center small">
    <p>© {{ "now"|date("Y") }} – FormMgmt</p>
</footer>

{% block javascripts %}
    <script src="https://unpkg.com/i18next@23.4.6/i18next.min.js"></script>
    <script src="{{ asset('js/base/translations.js') }}"></script>
    <script src="{{ asset('js/base/theme-toggle.js') }}"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Show bootstrap toasts
            document.querySelectorAll('.toast').forEach(function (toastEl) {
                new bootstrap.Toast(toastEl).show();
            });
        });
    </script>
{% endblock %}
</body>
</html>
